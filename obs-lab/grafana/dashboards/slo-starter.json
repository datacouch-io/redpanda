{
  "schemaVersion": 39,
  "title": "SLO Starter (RED + Lag)",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    { "type": "stat", "title": "Produce Rate (batches/s)", "gridPos": { "h": 5, "w": 8, "x": 0, "y": 0 },
      "targets": [{ "expr": "rp:produce_batches_per_sec" }] },
    { "type": "timeseries", "title": "Errors (discover & refine)", "gridPos": { "h": 8, "w": 16, "x": 8, "y": 0 },
      "targets": [{ "expr": "sum by (__name__) (rate({job=\"redpanda\", __name__=~\"vectorized_.*error.*total\"}[5m]))" }] },
    { "type": "timeseries", "title": "Scrape Duration (s) ~ Duration proxy", "gridPos": { "h": 8, "w": 12, "x": 0, "y": 5 },
      "targets": [{ "expr": "max(scrape_duration_seconds{job=\"redpanda\"})" }] },
    { "type": "timeseries", "title": "Lag (avg over 5m) by Group/Topic", "gridPos": { "h": 8, "w": 12, "x": 12, "y": 5 },
      "targets": [{ "expr": "rp:consumer_lag_avg_5m:group_topic" }] }
  ]
}